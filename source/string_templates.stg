module(name, stat, hasVars, hasScanner, hasPrintWriter, hasList, needsEntry, needsarrayToListStringsAuxFunc) ::= <<
<if(hasScanner)>
import java.util.Scanner;
<endif>
<if(hasVars)>
import java.util.HashMap;
<endif>
<if(needsEntry)>
import java.util.Map.Entry;
<endif>
<if(hasPrintWriter)>
import java.io.PrintWriter;
import java.io.FileNotFoundException;
<endif>
<if(hasList)>
import java.util.ArrayList;
import java.util.List;
<endif>

public class <name> {
    <if(hasVars)>
    static HashMap\<String, String> vars = new HashMap\<>();
    <endif>
    <stats(stat)>

    <if(needsarrayToListStringsAuxFunc)><arrayToListStrings_auxFunc()><endif>
}
>>

main(stat) ::= <<
public static void main(String[] args) throws Exception {
    <stats(stat)>
}
>>

